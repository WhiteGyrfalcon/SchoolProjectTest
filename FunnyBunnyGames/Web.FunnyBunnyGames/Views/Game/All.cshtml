@using FunnyBunnyGames.Services.Games.ViewModel
@model List<AllGamesViewModel>

@if (Model.Count == 0)
{
    <h2 class="text-center">There are no games.</h2>
}
else
{
    <div>
        <a class="ml-2 btn btn-primary" asp-controller="Game" asp-action="Add" style="border-color:#fc6c85; background-color:#fc6c85">Create</a>
    </div>
    <br />
    <div class="position-relative">
        <div class="row">
            @foreach (var game in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body text-center">
                            <h4>@game.Name</h4>
                            <h6>Price: <b>@game.Price</b></h6>
                            <h6>
                                <b>@game.GenreName</b>
                            </h6>
                            <h6>
                                Age restriction:
                                <b>@game.AgeRestriction</b>
                            </h6>
                            <h6>
                                Release date:
                                <b>@game.ReleaseDate</b>
                            </h6>
                            <br />

                            <a asp-controller="Game" asp-action="Get" asp-route-id="@game.Id"
                               class="btn btn-success" style="background-color:#fc6c85; border-color:#fc6c85">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}