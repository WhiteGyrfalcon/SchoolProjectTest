@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            /* Set background image for the body */
            background-image: url('https://wallpapercave.com/wp/wp11726455.jpg');
            background-size: cover; /* Adjust to 'contain' or other values as needed */
            background-position: center center; /* Adjust position as needed */
            background-repeat: no-repeat; /* Prevent repeating of the image */
            /* You can also set other styles for the body */
            margin: 0;
            padding: 0;
            font-family: Calligrapher, sans-serif;
        }

        .text-center {
            text-align: center;
        }

        .inscription {
            color: #fc6c85;
        }

        .background-container {
            /* Set styles for the container with the background image */
            background-image: url('https://wallpapercave.com/wp/wp11726455.jpg');
            background-size: cover; /* Adjust to 'contain' or other values as needed */
            background-position: center center; /* Adjust position as needed */
            background-repeat: no-repeat; /* Prevent repeating of the image */
        }
    </style>
</head>
<body>
    <div class="text-center">
        <p>
            <marquee behavior="scroll" direction="left">
                <h1 class="inscription">🎮 FunnyBunnyGames 🎮</h1>
            </marquee>
        </p>
    </div>
    <center>
        <!-- Use a div or another container for the background image -->
        <div class="background-container">
            <!-- Your content goes here -->
        </div>
    </center>
</body>
</html>
